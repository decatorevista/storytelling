require 'mina/ftp'

# FTP settings
# set :ftp_path, 'decatorevista.ro/storytelling/2013'
set :ftp_path, 'decatorevista.ro/storytelling/2013/v3'
set :ftp_host, ENV['FTP_HOST']
set :ftp_username, ENV['FTP_USERNAME']
set :ftp_password, ENV['FTP_PASSWORD']

desc 'Deploys the current version to the server.'
task :deploy do
  invoke :'jekyll:build'
  invoke :'ftp:deploy'
end
